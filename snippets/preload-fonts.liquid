{% assign brand_font = settings.typo_brand_font %}
{% assign brand_font_bold = brand_font | font_modify: 'weight', 'bolder' %}

{% unless brand_font_bold %}
  {% assign brand_font_bold = brand_font | font_modify: 'weight', 'bold' %}
{% endunless %}

{% assign brand_font_italic = brand_font | font_modify: 'style', 'italic' %}
{% assign brand_font_bold_italic = brand_font_bold | font_modify: 'style', 'italic' %}

<link rel="preload" as="font" href="{{ brand_font | font_url }}" type="font/woff2" crossorigin="anonymous"/>

{% if brand_font_bold %}
  <link rel="preload" as="font" href="{{ brand_font_bold | font_url }}" type="font/woff2" crossorigin="anonymous"/>
{% endif %}

{% if brand_font_italic %}
  <link rel="preload" as="font" href="{{ brand_font_italic | font_url }}" type="font/woff2" crossorigin="anonymous"/>
{% endif %}

{% if brand_font_bold_italic %}
  <link rel="preload" as="font" href="{{ brand_font_bold_italic | font_url }}" type="font/woff2" crossorigin="anonymous"/>
{% endif %}

