{% assign collection = collections[section.settings.collection] %}

{% if section.settings.title == blank %}
  {% assign title = collection.title %}
{% else %}
  {% assign title = section.settings.title %}
{% endif %}

{% assign product_limit = section.settings.products_per_row | times: section.settings.product_rows %}

{% render 'section-open', section: section, type: 'collection', title: title %}

  {% render 'products', section: section, collection: collection, products: collection.products, product_limit: product_limit, class: 'row-spacing-150' %}

{% render 'section-close' %}


{% schema %}
{
  "name": "t:sections.featured-collection.name",
  "class": "index-section section-collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "id": "width",
      "type": "select",
      "label": "t:sections.featured-collection.settings.width.label",
      "options": [
        {
          "value": "column-max",
          "label": "t:sections.featured-collection.settings.width.option__1.label"
        },
        {
          "value": "width-100",
          "label": "t:sections.featured-collection.settings.width.option__2.label"
        }
      ]
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "label": "t:sections.featured-collection.settings.products_per_row.label",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "product_rows",
      "label": "t:sections.featured-collection.settings.product_rows.label",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 1
    },
    {
      "type": "header",
      "content": "t:sections.featured-collection.settings.header__1.content"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "t:sections.featured-collection.settings.show_vendor.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_from",
      "label": "t:sections.featured-collection.settings.show_from.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "t:sections.featured-collection.settings.show_price.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_compare_at_price",
      "label": "t:sections.featured-collection.settings.show_compare_at_price.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_unit_price",
      "label": "t:sections.featured-collection.settings.show_unit_price.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_add_to_cart_button",
      "label": "t:sections.featured-collection.settings.show_add_to_cart_button.label",
      "info": "t:sections.featured-collection.settings.show_add_to_cart_button.info",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "view_options_mode",
      "label": "t:sections.featured-collection.settings.view_options_mode.label",
      "info": "t:sections.featured-collection.settings.view_options_mode.info",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sale_sticker",
      "label": "t:sections.featured-collection.settings.show_sale_sticker.label",
      "info": "t:sections.featured-collection.settings.show_sale_sticker.info",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collection.presets.name",
      "category": "Collection",
      "settings": {
        "width": "column-max",
        "products_per_row": 4,
        "product_rows": 1,
        "show_vendor": false,
        "show_from": false,
        "show_price": true,
        "show_compare_at_price": true,
        "show_unit_price": true,
        "show_add_to_cart_button": true,
        "show_sale_sticker": true
      }
    }
  ]
}
{% endschema %}
